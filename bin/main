#!/usr/bin/env ruby
class TicTacToe
  attr_accessor :numbers, :pick
  def initialize
    @pick = pick
    @board = Board.new
    @player = Player.new
  end

  def play
    @board.display
    round = 1
    while round <= @board.numbers.size
      player = @board.who_player(round)
      until @board.valid?(@pick) and @player.unique?(@pick)
        @board.prompt_message(player)
        @pick = gets.chomp.to_i
      end
      player_array(player) << @pick
      @numbers[@pick - 1] = player_totem(player)
      display
      break if win? or tie?

      round += 1
    end
  end
end

require_relative '../lib/player.rb'
require_relative '../lib/board.rb'
require_relative '../lib/game_logic.rb'

game = TicTacToe.new
game.play
