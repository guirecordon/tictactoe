#!/usr/bin/env ruby
class TicTacToe
  # @pick = nil

  attr_accessor :numbers, :board, :pick
  def initialize
    @board = Board.new
    @player = Player.new
    @pick = pick
  end

  def play
    @board.display
    round = 1
    while round <= @board.numbers.size
      player = @board.who_player(round)
      until @board.valid?(@pick) and @player.unique?(@pick)
        @board.prompt_message(player)
        @pick = gets.chomp.to_i
      end
      @player.player_array(player) << @pick
      p @player.player_array(player)
      # p @player.player_array(@player)
      p @player.arr_player1one
      p @player.arr_player2two
      p @board.win?

      @board.numbers[@pick - 1] = @player.player_totem(player)
      p @player.player_totem(player)
      @board.display
      break if @board.win? or @board.tie?

      round += 1
    end
  end
end

require_relative '../lib/player.rb'
require_relative '../lib/board.rb'
require_relative '../lib/game_logic.rb'

game = TicTacToe.new
game.play
